{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2017",
    "isolatedModules": false,
    "noEmit": false,
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "typeRoots": ["types", "../node_modules/@types"],
    "paths": {
      "~/*": ["*"],
      "@users/*": ["modules/users/*"]
    }
  },
  "include": ["**/*.ts"]
}
