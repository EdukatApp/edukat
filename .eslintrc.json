{
  "extends": [
    "airbnb-typescript",
    "airbnb/hooks"
  ],
  "rules": {
    "class-methods-use-this": "off"
  },
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": [
          "tsconfig.json",
          "server/tsconfig.json"
        ]
      }
    }
  },
  "overrides": [
    {
      "files": ["test/**/*.ts"],
      "rules": {
        "import/no-extraneous-dependencies": "off"
      }
    }
  ]
}
