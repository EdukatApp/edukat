{
  "extends": [
    "airbnb-typescript",
    "airbnb/hooks"
  ],
  "rules": {
    "class-methods-use-this": "off"
  },
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": [
          "tsconfig.json",
          "server/tsconfig.json",
          "test/tsconfig.json"
        ]
      }
    }
  },
  "overrides": [
    {
      "files": ["src/**/*.ts", "src/**/*.tsx"],
      "rules": {
        "import/order": [
          "error",
          {
            "groups": [
              ["builtin", "external"],
              "internal"
            ],

            "pathGroups": [
              {
                "pattern": "react",
                "group": "external",
                "position": "before"
              },
              {
                "pattern": "~/**",
                "group": "external",
                "position": "after"
              }
            ],

            "alphabetize": {
              "order": "asc",
              "caseInsensitive": true
            },

            "newlines-between": "always",

            "pathGroupsExcludedImportTypes": []
          }
        ]
      }
    },
    {
      "files": ["server/**/*.ts", "test/**/*.ts"],
      "rules": {
        "import/order": [
          "error",
          {
            "groups": [
              ["builtin", "external"],
              "internal"
            ],

            "pathGroups": [
              {
                "pattern": "~/**",
                "group": "external",
                "position": "after"
              },
              {
                "pattern": "@*/**",
                "group": "external",
                "position": "after"
              }
            ],

            "alphabetize": {
              "order": "asc",
              "caseInsensitive": true
            },

            "newlines-between": "always",

            "pathGroupsExcludedImportTypes": []
          }
        ]
      }
    },
    {
      "files": ["test/**/*.ts"],
      "rules": {
        "import/no-extraneous-dependencies": "off"
      }
    }
  ]
}
